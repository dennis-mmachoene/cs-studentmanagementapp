@model StudentManagementApp.Models.Student

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Are you sure want to delete this student?</h2>
<div class="border p-3">
    <p><strong>Student Number:</strong> @Model.StudentNumber</p>
    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Email Address:</strong> @Model.EmailAddress</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
</div>

<form asp-action="ConfirmDelete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
 <input type="hidden" name="studentNumber" value="@Model.StudentNumber"/>

 <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student? This action cannot be undone.');" >Delete</button>

 <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>