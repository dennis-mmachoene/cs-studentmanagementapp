@{
    ViewData["Title"] = "Student Manager";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fa-solid fa-graduation-cap text-primary me-2"></i>
        Student Management
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="list-group">
                <a href="@Url.Action("Add", "Student")" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="fa-solid fa-user-plus text-success me-3"></i>
                    <div>
                        <h6 class="mb-1">Add Student</h6>
                        <small class="text-muted">Register a new student</small>
                    </div>
                </a>
                
                <a href="@Url.Action("EditSearch", "Student")" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="fa-solid fa-user-pen text-warning me-3"></i>
                    <div>
                        <h6 class="mb-1">Edit Student</h6>
                        <small class="text-muted">Modify student information</small>
                    </div>
                </a>
                
                <a href="@Url.Action("ViewStudents", "Student")" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="fa-solid fa-eye text-info me-3"></i>
                    <div>
                        <h6 class="mb-1">View Students</h6>
                        <small class="text-muted">Browse all registered students</small>
                    </div>
                </a>
                
                <a href="@Url.Action("DeleteSearch", "Student")" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="fa-solid fa-user-minus text-danger me-3"></i>
                    <div>
                        <h6 class="mb-1">Remove Student</h6>
                        <small class="text-muted">Delete student records</small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
}